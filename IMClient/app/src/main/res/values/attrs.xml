<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable  name="inputview">
        <!--图片-->
        <attr name="input_icon" format="reference"></attr>
        <!--字体-->
        <attr name="input_hint" format="string"></attr>
        <!--是否密文-->
        <attr name="is_pass" format="boolean"></attr>
    </declare-styleable>


    <declare-styleable  name="nav">
        <!--图片-->
        <attr name="icon" format="reference"></attr>
        <!--字体-->
        <attr name="hint" format="string"></attr>
        <!--是否密文-->
        <attr name="pass" format="boolean"></attr>
        <attr name="right_icon" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="left_icon" format="integer"/>
        <attr name="show_left_icon" format="boolean"/>
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
        <attr name="show_right_arrow" format="boolean"/>
        <attr name="show_bottom_line" format="boolean"/>
    </declare-styleable>

</resources>