<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_user_head"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:hint="用户A"
                    android:textColor="#FAC0456C"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:hint="2020年3月29日"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="end"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/toPopWindow"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    app:srcCompat="@drawable/topop" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <!--<com.assionhonty.lib.assninegridview.AssNineGridView-->
            <!--android:id="@+id/angv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--app:angv_gridSpace="3dp"-->
            <!--app:angv_maxSize="9"-->
            <!--app:angv_singleImgRatio="1" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_image_view"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                app:srcCompat="@drawable/thumb" />

            <TextView
                android:id="@+id/to_like_tv"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:hint="赞"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/comment_image_view"
                android:layout_width="21dp"
                android:layout_height="23dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:srcCompat="@drawable/comment" />

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:hint="评论"
                android:textSize="13dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/likes_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:textColor="#2196F3"
            android:textSize="15dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>